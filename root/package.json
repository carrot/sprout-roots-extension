{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "main": "lib",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "lodash": "2.x",
    "minimatch": "0.2.x",
    "roots-util": "0.0.4"
  },
  "devDependencies": {
    "coffee-script": "1.7.x",
    "mocha": "*",
    "should": "*",
    "roots": "3.x"
  },
  "peerDependencies": {
    "roots": "3.x",
    "coveralls": "2.x",
    "istanbul": "0.3.x"
  },
  "scripts": {
