    "coverage": "make build; NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha; make unbuild; open coverage/lcov-report/index.html;",
    "coveralls": "make build; make coveralls; make unbuild;"
  },
  "repository": {
